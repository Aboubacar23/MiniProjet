{% extends 'base.html.twig' %}

{% block title %}Hello EquipeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 class="text-white bg-dark">liste de tous les etablissements</h1>
    <table class="table table-dark">
        <tr>
            <td> ID </td>
            <td> Nom</td>
          
 
        </tr> 
    {% for eta in etablissements %}
       <tr>
           <td>{{ eta.id}}</td> 
           <td>{{ eta.nom}}</td>
           <td><a href="{{path('sup_etablissement',{'id':eta.id})}}">Supprimer</a></td>
           <td><a href="{{path('show_etablissement',{'id':eta.id})}}">Detaile</a></td>
           <td><a href="{{path('edit_etablissement',{'id':eta.id})}}">Modifier</a></td>
        </tr>
    {% else %}   

  <h2> la table etablissement est vide </h2>
    {% endfor %}
    </table>
    <p><a href="{{path('add_etablissement')}}">Ajouter un etablissement</a></p>
</div>
{% endblock %}
