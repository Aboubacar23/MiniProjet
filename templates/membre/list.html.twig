{% extends 'base.html.twig' %}

{% block title %}Hello EquipeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <h1 class="text-white bg-dark">La liste de tous les membres</h1>
    <table class="table table-dark">
        <tr>
            <td> ID</td>
            <td> Cin </td>
            <td> Nom </td>
            <td> Prenom </td>
            <td> Email </td>
            <td> Adresse </td>
            <td> Equipe </td>
            <td> Statut </td>
            <td> Etablissement </td>
        <tr> 
    {% for m in membres %}
       <tr>
           <td>{{ m.id}}</td>
           <td>{{ m.cin}}</td>
           <td>{{ m.nom}}</td>
           <td>{{ m.prenom}}</td>
           <td>{{ m.email}}</td>
           <td>{{ m.adresse}}</td>
           <td>{{ m.equipe.nom}}</td>
           <td>{{ m.statut.nom}}</td>
           <td>{{ m.etablissement.nom}}</td>
           <td><a href="{{path('show_membre',{'id':m.id})}}"><i class="fas fa-eye"></i></a></td>
           <td><a href="{{path('edit_membre',{'id':m.id})}}"><i class="fas fa-edit"></i></a></td>
             <td><a href="{{path('sup_membre',{'id':m.id})}}"><i class="fas fa-trash-alt"></i></a></td>
        </tr>
    {% else %}   

  <h2> la table membre est vide </h2>
    {% endfor %}
    </table>
    <p><a href="{{path('add_membre')}}">Ajouter un membre</a></p>

{% endblock %}
